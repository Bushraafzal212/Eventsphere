@model IEnumerable<EventSphere.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="container-fluid">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Hero Section for Events -->
    <div class="row mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 15px; padding: 2rem; margin: 0 -15px;">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3 text-shadow">
                <i class="fas fa-calendar-alt me-3"></i>College Events
            </h1>
            <p class="lead text-shadow mb-4">Discover and register for exciting events happening around campus</p>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-white border-0">
                            <i class="fas fa-search text-primary"></i>
                        </span>
                        <input type="text" class="form-control border-0" placeholder="Search events by title, description, or organizer..." style="border-radius: 0 25px 25px 0;">
                        <button class="btn btn-warning px-4" type="button" style="border-radius: 0 25px 25px 0;">
                            <i class="fas fa-search me-2"></i>Search
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg" style="border-radius: 15px; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                <div class="card-body p-4">
                    <h5 class="card-title mb-4 text-center">
                        <i class="fas fa-filter text-primary me-2"></i>Filter & Search Events
                    </h5>
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="category" class="form-label fw-bold">
                                <i class="fas fa-tags text-success me-1"></i>Category
                            </label>
                            <select name="category" id="category" class="form-select border-0 shadow-sm" style="border-radius: 10px;">
                                <option value="">All Categories</option>
                                @if (ViewData["Categories"] is IEnumerable<string> categories)
                                {
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category" selected="@(ViewData["CurrentCategory"]?.ToString() == category)">@category</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="department" class="form-label fw-bold">
                                <i class="fas fa-building text-info me-1"></i>Department
                            </label>
                            <select name="department" id="department" class="form-select border-0 shadow-sm" style="border-radius: 10px;">
                                <option value="">All Departments</option>
                                @if (ViewData["Departments"] is IEnumerable<string> departments)
                                {
                                    @foreach (var department in departments)
                                    {
                                        <option value="@department" selected="@(ViewData["CurrentDepartment"]?.ToString() == department)">@department</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="searchTerm" class="form-label fw-bold">
                                <i class="fas fa-search text-warning me-1"></i>Search Events
                            </label>
                            <input type="text" name="searchTerm" id="searchTerm" class="form-control border-0 shadow-sm" 
                                   placeholder="Search by title, description, or organizer..." 
                                   value="@ViewData["CurrentSearch"]" 
                                   style="border-radius: 10px;" />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-gradient w-100 py-2" style="border-radius: 10px; font-weight: 600;">
                                <i class="fas fa-search me-1"></i>Search
                            </button>
                        </div>
                    </form>
                    
                    <!-- Quick Filter Tags -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-3">
                                <i class="fas fa-bolt text-warning me-1"></i>Quick Filters
                            </h6>
                            <div class="d-flex flex-wrap gap-2">
                                <a href="?category=Cultural" class="badge bg-success px-3 py-2" style="border-radius: 20px; text-decoration: none; font-size: 0.9rem;">
                                    <i class="fas fa-music me-1"></i>Cultural
                                </a>
                                <a href="?category=Academic" class="badge bg-info px-3 py-2" style="border-radius: 20px; text-decoration: none; font-size: 0.9rem;">
                                    <i class="fas fa-graduation-cap me-1"></i>Academic
                                </a>
                                <a href="?category=Sports" class="badge bg-warning px-3 py-2" style="border-radius: 20px; text-decoration: none; font-size: 0.9rem;">
                                    <i class="fas fa-running me-1"></i>Sports
                                </a>
                                <a href="?category=Social" class="badge bg-primary px-3 py-2" style="border-radius: 20px; text-decoration: none; font-size: 0.9rem;">
                                    <i class="fas fa-hands-helping me-1"></i>Social
                                </a>
                                <a href="?category=Entertainment" class="badge bg-danger px-3 py-2" style="border-radius: 20px; text-decoration: none; font-size: 0.9rem;">
                                    <i class="fas fa-theater-masks me-1"></i>Entertainment
                                </a>
                                <a href="?category=Career" class="badge bg-secondary px-3 py-2" style="border-radius: 20px; text-decoration: none; font-size: 0.9rem;">
                                    <i class="fas fa-briefcase me-1"></i>Career
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Events Grid -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var eventItem in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-lg border-0 event-card" style="border-radius: 15px; overflow: hidden; transition: all 0.3s ease;">
                        @{
                            var imageService = ViewData["ImageService"] as EventSphere.Services.IImageService;
                            var imageUrl = imageService?.GetEventImageUrl(eventItem) ?? "https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=800&h=400&fit=crop";
                        }
                        <div class="card-img-top position-relative" style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <img src="@imageUrl" alt="@eventItem.Title" style="height: 100%; width: 100%; object-fit: cover;">
                            <div class="position-absolute top-0 end-0 m-3">
                                <span class="badge px-3 py-2" style="background: linear-gradient(135deg, #ff6b6b 0%, #ffa500 100%); color: white; border-radius: 20px; font-size: 0.8rem;">
                                    @eventItem.Category
                                </span>
                            </div>
                        </div>
                        
                        <div class="card-body d-flex flex-column" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0 fw-bold text-dark">@eventItem.Title</h5>
                                <span class="badge px-3 py-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 20px;">
                                    @eventItem.EventType
                                </span>
                            </div>
                            
                            <p class="card-text text-muted flex-grow-1">
                                @(eventItem.Description.Length > 120 ? eventItem.Description.Substring(0, 120) + "..." : eventItem.Description)
                            </p>
                            
                            <div class="mt-auto">
                                <div class="row text-muted small mb-3">
                                    <div class="col-6">
                                        <i class="fas fa-calendar text-primary me-1"></i>
                                        @eventItem.EventDate.ToString("MMM dd, yyyy")
                                    </div>
                                    <div class="col-6">
                                        <i class="fas fa-clock text-success me-1"></i>
                                        @eventItem.StartTime.ToString(@"hh\:mm")
                                    </div>
                                </div>
                                <div class="row text-muted small mb-3">
                                    <div class="col-12">
                                        <i class="fas fa-map-marker-alt text-danger me-1"></i>
                                        @eventItem.Venue
                                    </div>
                                </div>
                                <div class="row text-muted small mb-3">
                                    <div class="col-6">
                                        <i class="fas fa-building text-info me-1"></i>
                                        @eventItem.OrganizingDepartment
                                    </div>
                                    <div class="col-6">
                                        <i class="fas fa-users text-warning me-1"></i>
                                        @eventItem.CurrentRegistrations/@eventItem.MaxCapacity registered
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    @if (eventItem.CertificateFee > 0)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="fas fa-certificate me-1"></i>
                                            $@eventItem.CertificateFee
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="fas fa-gift me-1"></i>
                                            Free
                                        </span>
                                    }
                                    
                                    <a asp-action="Details" asp-route-id="@eventItem.Id" 
                                       class="btn btn-gradient btn-sm px-3 py-2" style="border-radius: 20px; font-weight: 600;">
                                        <i class="fas fa-eye me-1"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times text-muted mb-3" style="font-size: 4rem;"></i>
                    <h4 class="text-muted">No events found</h4>
                    <p class="text-muted">Try adjusting your search criteria or check back later for new events.</p>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-refresh me-2"></i>View All Events
                    </a>
                </div>
            </div>
        }
    </div>

    @if (User.IsInRole("Organizer") || User.IsInRole("Admin"))
    {
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a asp-action="Create" class="btn btn-success btn-lg me-3">
                    <i class="fas fa-plus me-2"></i>Create New Event
                </a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="RefreshEvents" class="btn btn-warning btn-lg" 
                       onclick="return confirm('This will replace all existing events with new ones. Are you sure?')">
                        <i class="fas fa-sync-alt me-2"></i>Refresh Events
                    </a>
                }
            </div>
        </div>
    }
</div>

