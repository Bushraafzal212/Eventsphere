@model EventSphere.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Event
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-warning me-2"></i>Warning!
                        </h5>
                        <p class="mb-0">Are you sure you want to delete this event? This action cannot be undone and will remove all associated data including registrations and media.</p>
                    </div>

                    <!-- Event Information -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    @if (!string.IsNullOrEmpty(Model.BannerImageUrl))
                                    {
                                        <img src="@Model.BannerImageUrl" class="img-fluid rounded" alt="Event Banner" />
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                                            <i class="fas fa-calendar-alt text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-8">
                                    <h5 class="card-title text-primary">@Model.Title</h5>
                                    <p class="card-text text-muted">@Model.Description</p>
                                    
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-tag me-1"></i>@Model.Category
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>@Model.EventDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>@Model.StartTime.ToString(@"hh\:mm")
                                            </small>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">
                                                <i class="fas fa-map-marker-alt me-1"></i>@Model.Venue
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Event Statistics -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h6 class="card-title text-primary">Registrations</h6>
                                    <h4 class="text-primary">@Model.CurrentRegistrations</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h6 class="card-title text-success">Capacity</h6>
                                    <h4 class="text-success">@Model.MaxCapacity</h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h6 class="card-title text-info">Status</h6>
                                    <span class="badge @(Model.Status == EventSphere.Models.EventStatus.Approved ? "bg-success" : 
                                                      Model.Status == EventSphere.Models.EventStatus.Pending ? "bg-warning" : 
                                                      Model.Status == EventSphere.Models.EventStatus.Rejected ? "bg-danger" : "bg-secondary")">
                                        @Model.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h6 class="card-title text-warning">Department</h6>
                                    <small class="text-muted">@Model.OrganizingDepartment</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Impact Warning -->
                    @if (Model.CurrentRegistrations > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <h6 class="alert-heading">
                                <i class="fas fa-users me-2"></i>Impact on Participants
                            </h6>
                            <p class="mb-0">
                                This event has <strong>@Model.CurrentRegistrations registered participants</strong>. 
                                Deleting this event will remove all their registrations and they will need to be notified.
                            </p>
                        </div>
                    }

                    <!-- Confirmation Form -->
                    <form asp-action="DeleteEvent" method="post">
                        <input asp-for="Id" type="hidden" />
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                            <label class="form-check-label" for="confirmDelete">
                                I understand that this action cannot be undone and will permanently delete this event and all associated data.
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Events" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg" id="deleteButton" disabled>
                                <i class="fas fa-trash me-2"></i>Delete Event
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const confirmCheckbox = document.getElementById('confirmDelete');
            const deleteButton = document.getElementById('deleteButton');

            confirmCheckbox.addEventListener('change', function() {
                deleteButton.disabled = !this.checked;
            });

            // Additional confirmation on form submit
            document.querySelector('form').addEventListener('submit', function(e) {
                if (!confirm('Are you absolutely sure you want to delete this event? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
