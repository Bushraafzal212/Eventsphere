@{
    ViewData["Title"] = "Organizer Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6 mb-4">
                <i class="fas fa-user-tie text-primary me-2"></i>Organizer Dashboard
            </h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">My Events</h4>
                            <h2 class="mb-0">@(ViewData["MyEvents"] is IEnumerable<EventSphere.Models.Event> myEventsCount ? myEventsCount.Count() : 0)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Total Registrations</h4>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Upcoming Events</h4>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Completed Events</h4>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- My Events Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>My Events
                    </h5>
                    <a asp-controller="Events" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create New Event
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewData["MyEvents"] is IEnumerable<EventSphere.Models.Event> myEventsList && myEventsList.Any())
                    {
                        <div class="row">
                            @foreach (var eventItem in myEventsList)
                            {
                                <div class="col-lg-6 col-md-12 mb-4">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title">@eventItem.Title</h6>
                                                <span class="badge bg-@(eventItem.Status == EventSphere.Models.EventStatus.Approved ? "success" : eventItem.Status == EventSphere.Models.EventStatus.Pending ? "warning" : "danger")">
                                                    @eventItem.Status
                                                </span>
                                            </div>
                                            <p class="card-text text-muted small">
                                                <i class="fas fa-calendar me-1"></i>@eventItem.EventDate.ToString("MMM dd, yyyy")
                                                <br>
                                                <i class="fas fa-clock me-1"></i>@eventItem.StartTime.ToString(@"hh\:mm") - @eventItem.EndTime.ToString(@"hh\:mm")
                                                <br>
                                                <i class="fas fa-map-marker-alt me-1"></i>@eventItem.Venue
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-muted">
                                                    <i class="fas fa-users me-1"></i>@eventItem.CurrentRegistrations/@eventItem.MaxCapacity registered
                                                </small>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-controller="Events" asp-action="Edit" asp-route-id="@eventItem.Id" 
                                                       class="btn btn-outline-secondary btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-plus text-muted fa-3x mb-3"></i>
                            <h5 class="text-muted">No events created yet</h5>
                            <p class="text-muted">Start by creating your first event!</p>
                            <a asp-controller="Events" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create Your First Event
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Events" asp-action="Create" class="btn btn-outline-primary w-100">
                                <i class="fas fa-plus me-2"></i>Create Event
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Events" asp-action="MyEvents" class="btn btn-outline-info w-100">
                                <i class="fas fa-list me-2"></i>My Events
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="fas fa-calendar me-2"></i>Browse Events
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-warning w-100">
                                <i class="fas fa-chart-bar me-2"></i>Analytics
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
