@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary mb-4">About EventSphere</h1>
            <p class="lead text-muted">Transforming college event management through innovative technology</p>
        </div>
    </div>

    <!-- Mission Section -->
    <div class="row mb-5">
        <div class="col-lg-6">
            <h2 class="mb-4">Our Mission</h2>
            <p class="lead">To create a comprehensive, user-friendly platform that connects students, faculty, and administrators in the seamless management and participation of college events.</p>
            <p>EventSphere was born out of the need to solve the challenges faced by colleges and universities in managing their diverse range of events, competitions, cultural fests, and academic activities.</p>
        </div>
        <div class="col-lg-6">
            <div class="bg-primary text-white p-4 rounded">
                <h4 class="text-white mb-3"><i class="fas fa-target me-2"></i>Our Vision</h4>
                <p class="mb-0">To become the leading platform for educational event management, fostering better engagement, participation, and community building within academic institutions.</p>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">What Makes EventSphere Special?</h2>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-users" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Role-Based Access</h5>
                    <p class="text-muted">Tailored experiences for students, organizers, and administrators with appropriate permissions and features.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-mobile-alt" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Mobile-First Design</h5>
                    <p class="text-muted">Responsive design that works perfectly on all devices, ensuring accessibility for everyone.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-qrcode" style="font-size: 2rem;"></i>
                    </div>
                    <h5>QR Code Integration</h5>
                    <p class="text-muted">Modern attendance tracking with QR codes for quick and accurate check-ins.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-bell" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Real-time Notifications</h5>
                    <p class="text-muted">Instant updates and reminders to keep everyone informed about event changes and announcements.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-chart-bar" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Analytics & Reporting</h5>
                    <p class="text-muted">Comprehensive insights into event participation, engagement, and success metrics.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-shield-alt" style="font-size: 2rem;"></i>
                    </div>
                    <h5>Secure & Reliable</h5>
                    <p class="text-muted">Enterprise-grade security with reliable performance to handle high-traffic events.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">Our Team</h2>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="fas fa-user" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Development Team</h5>
                    <p class="text-muted">Passionate developers dedicated to creating innovative solutions for educational institutions.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="fas fa-graduation-cap" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Academic Advisors</h5>
                    <p class="text-muted">Experienced educators who provide valuable insights into the needs of academic communities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="fas fa-headset" style="font-size: 3rem;"></i>
                    </div>
                    <h5>Support Team</h5>
                    <p class="text-muted">Dedicated support professionals ensuring smooth operation and user satisfaction.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="bg-primary text-white p-5 rounded">
                <h2 class="text-center text-white mb-5">EventSphere by the Numbers</h2>
                <div class="row text-center">
                    <div class="col-md-3 mb-3">
                        <h3 class="display-4 fw-bold text-white">500+</h3>
                        <p class="text-white-50 mb-0">Active Users</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <h3 class="display-4 fw-bold text-white">100+</h3>
                        <p class="text-white-50 mb-0">Events Managed</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <h3 class="display-4 fw-bold text-white">15+</h3>
                        <p class="text-white-50 mb-0">Departments</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <h3 class="display-4 fw-bold text-white">99%</h3>
                        <p class="text-white-50 mb-0">Uptime</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact CTA -->
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="mb-4">Ready to Transform Your Event Management?</h2>
            <p class="lead text-muted mb-4">Join the growing community of institutions using EventSphere to enhance their event experiences.</p>
            <a asp-controller="Home" asp-action="Contact" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-envelope me-2"></i>Contact Us
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-user-plus me-2"></i>Get Started
            </a>
        </div>
    </div>
</div>

