<!-- Enhanced Featured Events Section -->
<div class="container mb-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="display-6 fw-bold mb-3 text-primary">
                <i class="fas fa-star text-warning me-3"></i>Featured Events
            </h2>
            <p class="lead text-muted">Discover the most exciting events happening on campus</p>
        </div>
    </div>
    
    <div class="row g-4">
        @if (ViewData["FeaturedEvents"] is IEnumerable<EventSphere.Models.Event> featuredEvents && featuredEvents.Any())
        {
            @foreach (var eventItem in featuredEvents)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="event-card">
                        <div class="event-image-container">
                            @{
                                var imageService = ViewData["ImageService"] as EventSphere.Services.IImageService;
                                var imageUrl = imageService?.GetEventImageUrl(eventItem) ?? "https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=800&h=400&fit=crop";
                            }
                            <img src="@imageUrl" class="event-image" alt="@eventItem.Title">
                            <div class="event-category-badge">
                                <span class="badge">@eventItem.Category</span>
                            </div>
                        </div>
                        
                        <div class="event-content">
                            <h5 class="event-title">@eventItem.Title</h5>
                            <p class="event-description">@(eventItem.Description.Length > 120 ? eventItem.Description.Substring(0, 120) + "..." : eventItem.Description)</p>
                            
                            <div class="event-details">
                                <div class="event-detail-item">
                                    <i class="fas fa-calendar text-primary"></i>
                                    <span>@eventItem.EventDate.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="event-detail-item">
                                    <i class="fas fa-clock text-success"></i>
                                    <span>@eventItem.StartTime.ToString(@"hh\:mm")</span>
                                </div>
                                <div class="event-detail-item">
                                    <i class="fas fa-map-marker-alt text-danger"></i>
                                    <span>@eventItem.Venue</span>
                                </div>
                            </div>
                            
                            <div class="event-actions">
                                <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                                <button class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-heart"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="no-events-container">
                    <div class="no-events-content">
                        <i class="fas fa-calendar-times no-events-icon"></i>
                        <h4 class="no-events-title">No events available at the moment</h4>
                        <p class="no-events-text">Check back later for exciting events!</p>
                        <a asp-controller="Events" asp-action="Index" class="btn btn-primary btn-lg px-4 py-3 rounded-pill">
                            <i class="fas fa-search me-2"></i>Browse All Events
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="text-center mt-5">
        <a asp-controller="Events" asp-action="Index" class="btn btn-gradient btn-lg px-5 py-3 rounded-pill">
            <i class="fas fa-calendar me-2"></i>View All Events
        </a>
    </div>
</div>

