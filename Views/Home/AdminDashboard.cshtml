@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6 mb-4">
                <i class="fas fa-tachometer-alt text-primary me-2"></i>Admin Dashboard
            </h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Pending Events</h4>
                            <h2 class="mb-0">@(ViewData["PendingEvents"] is IEnumerable<EventSphere.Models.Event> pendingEventsCount ? pendingEventsCount.Count() : 0)</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Total Events</h4>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Total Users</h4>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Registrations</h4>
                            <h2 class="mb-0">0</h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Events Section -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Pending Events for Approval
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewData["PendingEvents"] is IEnumerable<EventSphere.Models.Event> pendingEventsList && pendingEventsList.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Event Title</th>
                                        <th>Organizer</th>
                                        <th>Date</th>
                                        <th>Category</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var eventItem in pendingEventsList)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@eventItem.Title</strong>
                                                <br>
                                                <small class="text-muted">@eventItem.OrganizingDepartment</small>
                                            </td>
                                            <td>@eventItem.OrganizerName</td>
                                            <td>@eventItem.EventDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge bg-secondary">@eventItem.Category</span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" 
                                                       class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    <a asp-controller="Events" asp-action="Approve" asp-route-id="@eventItem.Id" 
                                                       class="btn btn-success btn-sm">
                                                        <i class="fas fa-check"></i> Approve
                                                    </a>
                                                    <a asp-controller="Events" asp-action="Reject" asp-route-id="@eventItem.Id" 
                                                       class="btn btn-danger btn-sm">
                                                        <i class="fas fa-times"></i> Reject
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle text-success fa-3x mb-3"></i>
                            <h5 class="text-muted">No pending events</h5>
                            <p class="text-muted">All events have been reviewed.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-primary me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Events" asp-action="PendingEvents" class="btn btn-outline-warning w-100">
                                <i class="fas fa-clock me-2"></i>Review Pending Events
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="fas fa-calendar me-2"></i>View All Events
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-info w-100">
                                <i class="fas fa-users me-2"></i>Manage Users
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="#" class="btn btn-outline-success w-100">
                                <i class="fas fa-chart-bar me-2"></i>View Analytics
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
